#!/usr/bin/env bash

set -e

###############################################################################
# Common packages
###############################################################################

sudo apt-get update
sudo apt-get install -y --no-install-recommends \
  apt-transport-https \
  build-essential \
  ca-certificates \
  curl \
  cmake \
  git \
  gnupg \
  htop \
  lsb-release \
  mesa-utils \
  ncdu \
  python3 \
  python3-dev \
  python3-venv \
  software-properties-common \
  tmux \
  vim \
  vim-gtk3 \
  zsh

###############################################################################
# Docker
###############################################################################

# Set up `apt` repository
DOCKER_KEYRING="/usr/share/keyrings/docker-archive-keyring.gpg"
wget -qO- https://download.docker.com/linux/ubuntu/gpg \
  | gpg --dearmor \
  | sudo tee $DOCKER_KEYRING > /dev/null
echo "deb [arch=$(dpkg --print-architecture) signed-by=$DOCKER_KEYRING] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable" \
  | sudo tee /etc/apt/sources.list.d/docker.list > /dev/null

# Install
sudo apt-get update
sudo apt-get install -y --no-install-recommends docker-ce

# Update permissions
sudo usermod -aG docker $USER
newgrp docker  # activate group changes
sudo systemctl restart docker

###############################################################################
# Visual Studio Code
###############################################################################

# Set up `apt` repository
VSCODE_KEYRING="/usr/share/keyrings/packages.microsoft.gpg"
wget -qO- https://packages.microsoft.com/keys/microsoft.asc \
  | gpg --dearmor \
  | sudo tee $VSCODE_KEYRING > /dev/null
echo "deb [arch=$(dpkg --print-architecture) signed-by=$VSCODE_KEYRING] https://packages.microsoft.com/repos/code stable main" \
  | sudo tee /etc/apt/sources.list.d/vscode.list > /dev/null

# Install
sudo apt-get update
sudo apt-get install -y --no-install-recommends code

###############################################################################
# User configuration
###############################################################################

# Make zsh the default shell
sudo chsh -s $(which zsh) $(whoami)
